{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@ts": ["src/ts/index"],
      "@ts/*": ["src/ts/*"],
      "@client/*": ["src/client/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
